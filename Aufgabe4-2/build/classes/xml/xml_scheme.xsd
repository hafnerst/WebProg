<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="catalog">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="question">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="title">
                <xs:complexType>
                  <xs:attribute type="xs:string" name="text" use="required"/>
                </xs:complexType>
              </xs:element>
              <xs:element name="answers">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="answer1">
                      <xs:complexType>
                        <xs:attribute type="xs:boolean" name="correct" use="required"/>
                        <xs:attribute type="xs:string" name="answertext" use="required"/>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="answer2">
                      <xs:complexType>
                        <xs:attribute type="xs:boolean" name="correct" use="required"/>
                        <xs:attribute type="xs:string" name="answertext" use="required"/>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="answer3">
                      <xs:complexType>
                        <xs:attribute type="xs:boolean" name="correct" use="required"/>
                        <xs:attribute type="xs:string" name="answertext" use="required"/>
                      </xs:complexType>
                    </xs:element>
                    <xs:element name="answer4">
                      <xs:complexType>
                        <xs:attribute type="xs:boolean" name="correct" use="required"/>
                        <xs:attribute type="xs:string" name="answertext" use="required"/>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>